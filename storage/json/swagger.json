    "/api/v1/auth/forgot-password": {
      "post": {
        "tags": [
          "auth-email"
        ],
        "summary": "This endpoint will send a password reset link to the user's email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string",
                    "example": "08063145125"
                  },
                  "otp": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": [
                  "phoneNumber",
                  "otp"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful",
            "token": "Bearer token"
          }
        }
      }
    },
    "/api/v1/auth/reset-password": {
      "post": {
        "tags": [
          "auth-email"
        ],
        "summary": "This endpoint will use the forgot password link , take in the new password to reset the user's password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "kats.com.g@gmail.com"
                  },
                    "password": {
                        "type": "string",
                        "example": "123456"
                    }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful"
          },
          "400": {
            "description": "Invalid email"
          }
        }
      }
    },
    "/api/v1/auth/phone-number-exist": {
      "post": {
        "tags": [
          "auth-phone"
