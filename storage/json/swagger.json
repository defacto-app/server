                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User details updated"
          }
        }
      }
    },
    "/api/v1/packages/all": {
      "get": {
        "summary": "Get all packages",
        "tags": [
          "packages-routes"
        ],
        "responses": {
          "200": {
            "description": "All packages"
          }
        }
      }
    },
    "/api/v1/packages/{packageId}": {
      "get": {
        "summary": "Get one package",
        "tags": [
          "packages-routes"
        ],
        "parameters": [
          {
            "name": "packageId",
            "in": "path",
            "required": true,
            "description": "The ID of the package to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of a specific package",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Package"
                }
              }
            }
          }
        }
      },
      "put":  {
        "summary": "Update a package",
        "tags": [
          "packages-routes"
        ],
        "parameters": [
          {
            "name": "packageId",
            "in": "path",
            "required": true,
            "description": "The ID of the package to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details of a specific package",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Package"
                }
              }
            }
          }
        }
      },
       "delete": {
          "summary": "Delete a package",
          "tags": [
             "packages-routes"
          ],
          "parameters": [
             {
                "name": "packageId",
                "in": "path",
                "required": true,
                "description": "The ID of the package to retrieve",
                "schema": {
                  "type": "string"
                }
             }
          ],
          "responses": {
             "200": {
                "description": "Package deleted"
             }
          }
        }


    }
  }
}


