    },
    "/api/v1/auth/phone-register": {
      "post": {
        "tags": [
          "auth-phone"
        ],
        "summary": "User registration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string",
                    "example": "08063145125"
                  },
                  "otp": {
                    "type": "string",
                    "example": "123456"
                  }
                },
