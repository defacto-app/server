{
  "openapi": "3.0.0",
  "info": {
    "title": "Defacto API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5700"
    },
    {
      "url": "https://api.defactoapp.com.ng"
    }
  ],
  "security": [
    {
      "bearerAuth": [
      ],
      "basicAuth": [],
      "apiKey": [],
      "oauth2": [],
      "openIdConnect": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header",
        "name": "Authorization",
        "description": "Bearer token"
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication-flow"],
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "kats.com.ng@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication-flow"],

        "summary": "User registration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful"
          }
        }
      }
    },
    "/api/auth/logout": {
      "get": {
        "tags": ["Authentication-flow"],

        "summary": "Log out a user",
        "responses": {
          "200": {
            "description": "You have been logged out"
          }
        }
      }
    },
    "/api/auth/ping": {
      "get": {
        "tags": ["Authentication-flow"],
        "summary": "Ping to verify token validity",
        "responses": {
          "200": {
            "description": "Ping successful"
          }
        }
      }
    },
    "/api/auth/user-exists": {
      "post": {
        "tags": ["Authentication-flow"],

        "summary": "Check if a user exists",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@gmail.com"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "user exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "exists": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/update-user": {
      "put": {
        "summary": "Update User Details",
        "tags": ["User-Routes"],

        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@gmail.com"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
            "200": {
                "description": "User details updated"
            }
        }
      }
    }
  }
}


